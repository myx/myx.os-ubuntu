#!/bin/sh

## NOTE: because of ubuntu not supporting the '-l' option

SedLineReader(){
	stdbuf -oL -eL sed -u "$@"
}

case "$0" in
	*/myx.common/bin/lib/sedLineReader) 
		if [ -z "$1" ] ; then
			echo "Syntax: myx.common lib/sedLineReader ['sed' arguments, see 'man sed'...]" >&2
			exit 1
		fi
		set -e
		SedLineReader "$@"
	;;
esac
